{
    "compilerOptions": {
        "outDir": "./dist",
        "sourceMap": true,
        "diagnostics":true,

        "experimentalDecorators": true,

        "allowJs": false,

        "allowUnreachableCode": false,
        "allowUnusedLabels": false,
        "alwaysStrict": true,

        "newLine": "LF",

        "noEmitOnError": true,
        "noImplicitAny": true,
        "noImplicitReturns": true,
        "noImplicitThis": true,
        "noImplicitUseStrict": false,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        "noErrorTruncation": true,

        "strict": true,

        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES6",
        "jsx": "react",
        "jsxFactory": "h"
    },
    "compileOnSave": false,
    "include" : [
        "../../src/main/**/*",
        "../../src/test/**/*"
    ]
}
